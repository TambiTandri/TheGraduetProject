                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/THE_GRADUATE"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#263ad1"
                android:layout_marginStart="23dp"
